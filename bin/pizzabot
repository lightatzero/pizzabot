#!/usr/bin/env python3

import sys
import argparse

from pizzabot.engine import PizzabotEngine

parser = argparse.ArgumentParser(description='Pizzabot give it a grid and coordinates')
parser.add_argument('input_string', type=str,
                    help='input string for pizzabot: "5x5 (1, 3) (4, 4)"')
args = parser.parse_args()

pe = PizzabotEngine()
print(pe.process_string(args.input_string))
