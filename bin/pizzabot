#!/usr/bin/env python

import sys

from pizzabot.engine import PizzabotEngine

if len(sys.argv) < 2:
    print('ERROR: pizzabot requires a valid string, eg "5x5 (1, 3) (4, 4)"')
    exit()

try:
    pe = PizzabotEngine()
    print(pe.process_string(sys.argv[1]))
except:
    print('ERROR: pizzabot requires a valid string, eg "5x5 (1, 3) (4, 4)"')
